{
  "targets": {
    "debug": {
      "outFile": "build/debug.wasm",
      "textFile": "build/debug.wat",
      "optimizeLevel": 3,
      "shrinkLevel": 0,
      "sourceMap": true,
      "debug": true,
      "runtime": "minimal",
      "maximumMemory": 32768,
      "sharedMemory": true,
      "exportRuntime": true
    },
    "release": {
      "outFile": "build/release.wasm",
      "textFile": "build/release.wat",
      "sourceMap": true,
      "uncheckedBehavior": "always",
      "optimizeLevel": 3,
      "shrinkLevel": 0,
      "converge": true,
      "noAssert": true,
      "runtime": "minimal",
      "maximumMemory": 32768,
      "sharedMemory": true,
      "exportRuntime": true,
      "debug": true
    }
  },
  "options": {
    "bindings": "raw",
     "enable": ["threads"]
  }
}